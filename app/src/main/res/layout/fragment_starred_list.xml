<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.starred.StarredListFragment">

    <!-- ▼▼▼ TÍTULO AÑADIDO ▼▼▼ -->
    <TextView
        android:id="@+id/tv_starred_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Recordatorios Destacados"
        android:textAppearance="?attr/textAppearanceHeadlineMedium"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- ▲▲▲ FIN DEL TÍTULO ▲▲▲ -->


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_starred_reminders"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_starred_title" /> <!-- Anclado debajo del nuevo título -->


    <LinearLayout
        android:id="@+id/layout_no_starred_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_starred_title"  tools:visibility="visible"> <!-- Anclado debajo del nuevo título -->

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_star_outline"
            app:tint="?android:attr/textColorSecondary"
            android:layout_marginBottom="16dp"
            android:contentDescription="No hay destacados"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tienes recordatorios destacados"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?android:attr/textColorSecondary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usa el menú de un recordatorio para destacarlo."
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
